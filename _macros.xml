<evaml xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="TESTE_VOZ_EVA" xsi:noNamespaceSchemaLocation="EvaML-Schema/evaml_schema.xsd">
  <settings>
    <voice tone="pt-BR_IsabelaV3Voice" />
    <lightEffects mode="ON" />
    <audioEffects mode="ON" />
  </settings>
  <script>  
    <talk>Olá, sou o robô EVA</talk>
    <talk>Agora eu irei te apresentar as minhas emoções</talk>
    <talk>Desse jeito estou feliz</talk>
    <evaEmotion emotion="HAPPY" />
    <wait duration="10" />
    <light state="ON" color="PINK" />
    <talk>Desse jeito estou triste</talk>
    <wait duration="10" />
    <light state="ON" color="BLUE" />
    <talk>Desse jeito estou com raiva</talk>
    <wait duration="10" />
    <light state="ON" color="RED" />
    <talk>E assim estou neutro</talk>
    <evaEmotion emotion="NEUTRAL" />
    <wait duration="10" />
    <light state="ON" color="WHITE" />

    <talk>Essas são as minhas emoções, até a próxima</talk>

  </script> 
</evaml>